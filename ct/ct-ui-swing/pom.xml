	<groupId>it.tac.ct</groupId>
	<artifactId>ct-ui-swing</artifactId>
	<name>ct-ui-swing</name>
	<packaging>jar</packaging>
	<version>1.0</version>

	<dependencies>
		<dependency>
			<groupId>it.tac.ct</groupId>
			<artifactId>ct-core</artifactId>
			<version>1.0</version>
			<type>jar</type>
		</dependency>
